{
    "devDependencies": {
        "prettier": "^3.6.2",
        "sass": "^1.89.2"
    },
    "scripts": {
        "css:build": "sass src/styles/main.scss src/assets/css/main.css --style=compressed --no-source-map",
        "css:dev": "sass src/styles/main.scss src/assets/css/main.css --watch --source-map",
        "css:format": "prettier --write \"src/styles/**/*.scss\"",
        "css:check": "sass --check src/styles/main.scss",
        "build": "npm run css:build",
        "dev": "npm run css:dev",
        "start": "npm run css:check && npm run css:format && npm run dev",
        "deploy": "npm run css:check && npm run css:format && npm run build"
    }
}
